<div class="container mt-4">
    <h3>Sửa Thông Tin Sinh Viên</h3>
    <form method="POST" action="/{{user._id}}?_method=PUT">
        <div class="mb-3">
            <label for="hoten" class="form-label">Họ và tên</label>
            <input type="text" class="form-control" value="{{user.hoten}}" id="hoten" name="hoten" />
        </div>
        <div class="mb-3">
            <label for="masv" class="form-label">Mã sinh viên</label>
            <input type="text" class="form-control" value="{{user.masv}}" id="masv" name="masv" />
        </div>
        <div class="mb-3">
            <label for="Lop" class="form-label">Lớp</label>
            <input type="text" class="form-control" value="{{user.lop}}" id="lop" name="lop" />
        </div>

        <button type="submit" class="btn btn-primary">Luu lai</button>
    </form>
</div>